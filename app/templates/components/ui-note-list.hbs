<section class="notes-container">
	<div class="mdc-grid-list mdc-grid-list--with-icon-align-start">
	  <ul class="mdc-grid-list__tiles">
	  	{{#unless notes.length}}
	  		<h1 class="mdc-typography--display3"> Click the + button in the bottom right to create some notes. </h1>
	  	{{/unless}}
	    {{#each notes as |note|}}
		    <li class="mdc-grid-tile">
			  {{#if note.pending}}
				<img src="images/preloader.gif" class="loader"/>
			  {{else}}
		      <div class="mdc-card">
				  <section class="mdc-card__primary">
				    <h1 class="mdc-card__title mdc-card__title--large">
				    	{{input type="text" class="mdc-textfield__input full-width" value=note.title title="Click to edit"}}
			    	</h1>
				  </section>
				  <section class="mdc-card__supporting-text">
				    {{textarea class="mdc-textfield__input full-width" value=note.content}}
				  </section>
				  <section class="mdc-card__actions">
				  	 <a href="javascript:void(null)" class="material-icons" {{action "menu" note.noteId}}>menu</a>
				  	 <div id="menu-{{note.noteId}}" class="mdc-simple-menu" tabindex="-1">
					  <ul class="mdc-simple-menu__items mdc-list" role="menu" aria-hidden="true">
					    <li class="mdc-list-item" role="menuitem" tabindex="0">
					      <button class="mdc-button mdc-button--compact mdc-card__action {{if note.pending "disabled"}}" {{action "save" note}}>Save</button>
					    </li>
					    <li class="mdc-list-item" role="menuitem" tabindex="0">
					      <button class="mdc-button mdc-button--compact mdc-card__action mdc-button--accent {{if note.pending "disabled"}}" {{action "delete" note}}>Delete</button>
					    </li>
					  </ul>
					</div>
				  </section>
			  </div>
		      {{/if}}
		    </li>
	  	{{/each}}
	  </ul>
	</div>
	{{yield}}
</section>